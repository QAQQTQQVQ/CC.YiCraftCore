@model CC.YiCraftCore.Models.NoticeInfo

@{
    Layout = "_Layout";
}



<div class="row" style="margin-top: 50px;">
    <div class="col-md-4">
        <form method="post" asp-action="add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tit" class="control-label"></label>
                <input asp-for="Tit" class="form-control" />
                <span asp-validation-for="Tit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="添加" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">主页</a>

</div>

